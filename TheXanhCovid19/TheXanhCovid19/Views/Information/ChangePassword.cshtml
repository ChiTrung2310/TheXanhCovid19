@model Model.EF.tblNguoiDung

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-12">
        <div class="panel panel-default" style="text-align:center">
            <div class="panel-heading" style="padding:3%">
                <h3>ĐỔI MẬT KHẨU</h3>
            </div>
            <div class="panel-body" style="margin:50px">
                <h6 style="color:red">Hãy ghi nhớ mật khẩu sau khi thay đổi</h6>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("ChangePassword", "Information", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                            @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-12" })

                            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })


                            @Html.HiddenFor(model => model.MaSo)

                            @Html.HiddenFor(model => model.UserName)

                            @Html.HiddenFor(model => model.Ho)

                            @Html.HiddenFor(model => model.TenDem)

                            @Html.HiddenFor(model => model.Ten)

                            @Html.HiddenFor(model => model.NgaySinh)

                            @Html.HiddenFor(model => model.GioiTinh)

                            @Html.HiddenFor(model => model.QueQuan)

                            @Html.HiddenFor(model => model.DiaChi)

                            @Html.HiddenFor(model => model.DienThoai)

                            @Html.HiddenFor(model => model.Email)



                            <div class="form-group">
                                <br />
                                <label class="control-label col-md-3">Mật khẩu:</label>

                                @Html.PasswordFor(model => model.OldPass, new { @class = "", @Value = "", @Required = true, id = "password", @autofocus = "autofocus" } )

                                @Html.ValidationMessageFor(model => model.OldPass, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">

                                <label class="control-label col-md-3">Mật khẩu mới:</label>

                                @Html.PasswordFor(model => model.MatKhau, new { @class = "", @Value = "", @Required = true, id = "newPassword" } )

                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">

                                <label class="control-label col-md-3">Xác nhận mật khẩu mới:</label>

                                @Html.PasswordFor(model => model.ConfirmPass, new { @class = "", @Value = "", @Required = true, id = "confirmPassword" } )

                            </div>


                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="button" style="width:9%; margin-left:15%; margin-top:0%" id="eye" value="Show" onclick="toggle()"/>
                                </div>
                            </div>


                            <div class="form-group">
                                <br />
                                <div class="col-md-offset-2 col-md-12">

                                    <input type="submit" value="ĐỔI MẬT KHẨU" style="margin-left:4%" class="btn btn-success" />
                                    <a href="/Information/Index" style="width:10%" class="btn btn-warning"> QUAY LẠI</a>

                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    var state = false;
    function toggle() {
        if (state) {
            document.getElementById("password").setAttribute("type", "password");
            document.getElementById("newPassword").setAttribute("type", "password");
            document.getElementById("confirmPassword").setAttribute("type", "password");
            document.getElementById("eye").value = "Show";
            state = false;
        } else {
            document.getElementById("password").setAttribute("type", "text");
            document.getElementById("newPassword").setAttribute("type", "text");
            document.getElementById("confirmPassword").setAttribute("type", "text");
            document.getElementById("eye").value = "Hide";
            state = true;
        }
    }

</script>


