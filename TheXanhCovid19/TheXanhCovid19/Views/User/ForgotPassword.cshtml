
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal" style="height: 570px; text-align:center">
                 <h4 style="padding:30px">Quên mật khẩu</h4>

                <div class="text-danger">
                    @ViewBag.Message
                </div>
                <div style="text-align:center; margin:1%; color:green">
                    Hãy nhập địa chỉ email bạn cung cấp trước đó trong tờ khai tiêm vaccine.
                </div>
                <div class="form-group">
                    <label class="control-label col-md-8">Địa chỉ Email:</label>
                    <div class="col-md-10">
                        @Html.TextBox("EmailID", "", new { style = "width:30em; margin-left:200px; margin-bottom:25px; padding:10px", @Required = true, @autofocus = "autofocus", placeholder = "Nhập địa chỉ email của bạn" })
                    </div>      
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="width:49%; padding:10px" type="submit" value="LẤY LẠI MẬT KHẨU" class="btn btn-success" />
                        <hr />
                        <a href="/User/Login" style="width:49%; padding:10px" class="btn btn-warning">QUAY LẠI</a>
                    </div>
                </div>
            </div>
        }

    </div>

</div>

