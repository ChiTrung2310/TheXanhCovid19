
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var gird = new WebGrid(source: Model, rowsPerPage: 10);
}


<style type="text/css">
table.gridtable {
    font-family: verdana, arial,sans-serif;
    font-size: 12px;
    color: #333333;
    border-width: 1px;
    border-color: #666666;
    border-collapse: collapse;
    text-align: center;
    width: 95%;
    margin-left: 3%;
    margin-bottom: 3%;
}

table.gridtable th {
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color: #666666;
    background-color: #dedede;
}

table.gridtable td {
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color: #666666;
    background-color: #ffffff;
}
</style>


<h2 style="text-align:center; margin:2%">Danh sách phản ánh chờ duyệt</h2>

@using (Html.BeginForm("UpdateSelected", "ThongTinPA", FormMethod.Post))
{
    @gird.GetHtml(
    tableStyle: "gridtable",
    columns:
    gird.Columns(
        gird.Column(format:@<text><input type="checkbox" name="ids" value="@item.ID" /></text>, header: "Chọn"),
        gird.Column("HoTen", "Họ tên"),
        gird.Column("SoCMND", "Số CMND"),
        gird.Column("TieuDe", "Tiêu đề"),
        gird.Column("NoiDung", "Nội dung"),
        gird.Column("NgayPhanAnh", "Ngày phản ánh")
        )
    )

    <input type="submit" value="DUYỆT PHẢN ÁNH" style="margin-left:3%" class="btn btn-primary" />

}


