
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var gird = new WebGrid(source: Model, rowsPerPage: 10);
}

<style type="text/css">
table.gridtable {
    font-family: verdana, arial,sans-serif;
    font-size:12px;
    color:#333333;
    border-width: 1px;
    border-color: #666666;
    border-collapse: collapse;
    text-align:center;
    width:95%;
    margin-left:3%;
    margin-bottom:3%;
}
table.gridtable th {
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color:#666666;
    background-color: #dedede;
}
table.gridtable td {
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color:#666666;
    background-color: #ffffff;
}
</style>


<h2 style="text-align:center; margin:2%">Danh sách khai báo y tế chờ duyệt</h2>

@using (Html.BeginForm("DeleteSelected","ThongTinKhaiBaoYTe", FormMethod.Post))
{
    @gird.GetHtml(
    tableStyle: "gridtable",
    columns:
    gird.Columns(
        gird.Column(format:@<text><input type="checkbox" name="ids" value="@item.ID"/></text>, header: "Chọn"),
        gird.Column("HoTen", "Họ tên"),
        gird.Column("SoCMND", "Số CMND"),

        gird.Column("WardsID", "Xã / Phường"),


        gird.Column("DistrictID", "Quận / Huyện"),
        gird.Column("ProvinceID", "Tỉnh / Thành Phố"),
        gird.Column("DiaDiemCuThe", "Địa điểm cụ thể"),
        gird.Column("TiepXucKhuVuc", "Tiếp xúc KV F0"),
        gird.Column("TiepXucNguoiBenh", "Tiếp xúc F0"),
        gird.Column("TrieuChungNhiemBenh", "Triệu chứng nhiễm bệnh")
        )
    )

    <input type="submit" value="DUYỆT KHAI BÁO" style="margin-left:3%" class="btn btn-primary" />

}

