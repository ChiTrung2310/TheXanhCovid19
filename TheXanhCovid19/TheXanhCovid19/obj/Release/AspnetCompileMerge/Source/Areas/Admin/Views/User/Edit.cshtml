                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoCMND, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger" })

                            </div>

                            @Html.HiddenFor(model => model.SoMuiTiem)

                            @Html.HiddenFor(model => model.LoaiThe)


                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="margin-left:200px">
                                    <input style="background-color:green; color:white" type="submit" value="Cập nhật" class="btn btn-default" />
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


