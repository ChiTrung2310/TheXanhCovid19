@model Model.EF.tblKhaiBaoYTe

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="~/Assets/client/js/controller/KBYTController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default" style="text-align:center">
            <div class="panel-heading" style="padding:30px">
                <h3>Khai Báo Y Tế</h3>

            </div>

            <h5 style="padding:20px; color:red">Khuyến cáo: Khai báo thông tin sai là vi phạm pháp luật Việt Nam và có thể bị xử lý hình sự</h5>
            <h6 class="control-label col-md-7" style="padding:20px; color:red">Trường (*) là bắt buộc điền:</h6>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-9">


                        @using (Html.BeginForm("Create", "KhaiBaoYTe", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()



                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">

                                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoCMND, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">

                                @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-7" })
                                &emsp; &emsp; &emsp;
                                @Html.RadioButton("GioiTinh", "Nam") Nam &emsp; &emsp;
                                @Html.RadioButton("GioiTinh", "Nữ") Nữ


                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })


                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "date", @type = "date", @style = "width:196px;height:30px" } })

                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoTheBHYT, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.SoTheBHYT, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.SoTheBHYT, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.ProvinceID, htmlAttributes: new { @class = "col-md-7" })

                                @Html.DropDownList("ProvinceID", new SelectList(new string[] { }), new { @id = "ddlProvince", @style = "width:196px; height:32px" })

                                @Html.ValidationMessageFor(model => model.ProvinceID, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.DistrictID, htmlAttributes: new { @class = "col-md-7" })

                                @Html.DropDownList("DistrictID", new SelectList(new string[] { }), new { @id = "ddlDistrict", @style = "width:196px; height:32px" })

                                @Html.ValidationMessageFor(model => model.DistrictID, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.WardsID, htmlAttributes: new { @class = "col-md-7" })

                                @Html.DropDownList("WardsID", new SelectList(new string[] { }), new { @id = "ddlWards", @style = "width:196px; height:32px" })

                                @Html.ValidationMessageFor(model => model.WardsID, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.DiaDiemCuThe, htmlAttributes: new { @class = "control-label col-md-7" })

                                @Html.TextBoxFor(model => model.DiaDiemCuThe, new { @class = "" , @Value = "Không có"  })

                                @Html.ValidationMessageFor(model => model.DiaDiemCuThe, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TiepXucKhuVuc, htmlAttributes: new { @class = "control-label col-md-7" })
                                &emsp; &emsp; &emsp;
                                @Html.RadioButton("TiepXucKhuVuc", "Có") Có &emsp; &emsp;
                                @Html.RadioButton("TiepXucKhuVuc", "Không", new { Checked = true }) Không


                                @Html.ValidationMessageFor(model => model.TiepXucKhuVuc, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TiepXucNguoiBenh, htmlAttributes: new { @class = "control-label col-md-7" })
                                &emsp; &emsp; &emsp;
                                @Html.RadioButton("TiepXucNguoiBenh", "Có") Có &emsp; &emsp;
                                @Html.RadioButton("TiepXucNguoiBenh", "Không", new { Checked = true }) Không


                                @Html.ValidationMessageFor(model => model.TiepXucNguoiBenh, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.TrieuChungNhiemBenh, htmlAttributes: new { @class = "control-label col-md-7" })
                                &emsp; &emsp; &emsp;
                                @Html.RadioButton("TrieuChungNhiemBenh", "Có") Có &emsp; &emsp;
                                @Html.RadioButton("TrieuChungNhiemBenh", "Không", new { Checked = true }) Không


                                @Html.ValidationMessageFor(model => model.TrieuChungNhiemBenh, "", new { @class = "text-danger" })

                            </div>


                            <h5 style="text-align:center; margin-left:300px ;color:red">Dữ liệu bạn cung cấp hoàn toàn bảo mật và chỉ phục vụ cho việc phòng, chống dịch, thuộc quản lý của ban chỉ đạo quốc gia về Phòng, chống dịch Covid-19. Khi bạn ấn nút "Gửi tờ khai" là bạn đã hiểu và đồng ý. </h5>


                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input style="margin-left:300px; color:white" type="submit" value="Gửi tờ khai" class="btn btn-success" />
                                </div>
                            </div>



                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



