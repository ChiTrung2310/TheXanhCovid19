@model PagedList.IPagedList<Model.EF.tblNguoiDung>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h2 style="text-align:center">Danh sách dữ liệu số mũi tiêm - thẻ xanh</h2>

<div class="row">
    <div class="col-lg-12">

        <!-- Page Heading -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách dữ liệu số mũi tiêm - thẻ xanh</h6>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="input-group" style="margin:15px; width:500px">
                        <input type="text" name="searchString" class="form-control bg-light border-0 small" placeholder="Từ khóa..."
                               aria-label="Search" value="@ViewBag.SearchString" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>

                        &emsp;&emsp;
                        <div>
                            <a href="/Admin/User/Index" class="btn btn-primary">
                                Người dùng
                            </a>
                          
                        </div>

                    </div>
                }


                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" style="text-align:center" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Họ</th>
                                <th>Tên lót</th>
                                <th>Tên</th>
                                <th>Số CMND</th>
                                <th>Số mũi tiêm</th>
                                <th>Loại thẻ</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaSo">
                                    <td>
                                        <a href="/Admin/TheXanh/Edit/@item.MaSo">Sửa</a>
                                    </td>
                                    <td>@item.MaSo</td>
                                    <td>@item.Ho</td>
                                    <td>@item.TenDem</td>
                                    <td>@item.Ten</td>
                                    <td>@item.SoCMND</td>
                                    <td>@item.SoMuiTiem</td>
                                    <td>@item.LoaiThe</td>
                                </tr>
                            }

                        </tbody>
                    </table>


                    @Html.PagedListPager(Model, page => Url.Action("Index", new
               {
                   page,
                   sortOrder = ViewBag.CurrentSort,
                   currentFilter = ViewBag.CurrentFilter,
                   @searchString = @ViewBag.SearchString
                    }
                                                                ),
                                                                new PagedListRenderOptions()
                    {
                        LiElementClasses = new List<string> { "btn btn-light" }
                                                                })


                </div>
            </div>
        </div>

    </div>
</div>

